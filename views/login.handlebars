<div class="login-signup-forms row align-items-center mr-3 ml-3">
<form class="login-form col-4 d-flex flex-column form-group">
  <p class="login-text mt-2">Login</p>
  <div class="mt-3 mb-4">
    <label for="email-login">Email:</label>
    <input type="email" id="email-login" class="form-control" placeholder="Enter email"/>
  </div>
  <div class="mb-3 mt-2">
    <label for="password-login">Password:</label>
    <input type="password" id="password-login" class="form-control" placeholder="Password" />
  </div>
  <div>
    <button type="submit" class="btn btn-secondary mt-3 mb-3">Login</button>
  </div>
</form>

<img alt="grey s logo" class="logo-image col-4 d-flex flex-column" src="https://i.pinimg.com/originals/5d/10/d9/5d10d98db2f88b601b55c0809e598f26.png">

<form class="signup-form col-4 d-flex flex-column form-group">
  <p class="signup-text mt-2">Signup</p>
  <div>
    <label for="username-signup">Username:</label>
    <input type="text" id="username-signup" class="form-control" placeholder="Username" />
  </div>
  <div>
    <label for="email-signup">Email:</label>
    <input type="email" id="email-signup" class="form-control" placeholder="Enter email" />
  </div>
  <div>
    <label for="password-signup">Password:</label>
    <input type="password" id="password-signup" class="form-control" placeholder="Password" />
  </div>
  <div>
    <button type="submit" class="btn btn-secondary mt-3 mb-3">Signup</button>
  </div>
</form>
</div>

<script src="/public/js/login.js"></script>