<article class="post">
  <div class="title">
    <a href="{{post_text}}" target="_blank">{{title}}</a>
    <span>({{post_text}})</span>
  </div>
  <div class="meta">
    {{vote_count}} by {{user.username}} on {{created_at}}
    |
    <a href="/post/{{id}}">{{comments.length}}</a>
  </div>
</article>