<section>
  <div class="row">
  
    <div class="col-4">
      <img alt="grey s logo" class="logo-image-profile d-flex flex-column" src="https://i.pinimg.com/originals/5d/10/d9/5d10d98db2f88b601b55c0809e598f26.png">
    </div>
 
    <form class="new-post-form form-group col-4 mt-5">
      <h2>Create New Post</h2>
      <div>
        <label for="post-title">Title:</label>
        <input type="text" id="post-title" name="post-title" class="form-control" placeholder="Enter title"/>
      </div>
      <div>
        <label for="post-text">Text:</label>
        <input type="text" id="post-text" name="post-text" class="form-control" placeholder="Enter text" />
      </div>
      <button type="submit" class="btn btn-dark mt-3">Create</button>
    </form>

    <div class="col-4">
      <img alt="grey s logo" class="logo-image-profile d-flex flex-column" src="https://i.pinimg.com/originals/5d/10/d9/5d10d98db2f88b601b55c0809e598f26.png">
    </div>

  </div>
</section>

{{#if posts.length}}
<section class="your-posts">
  <h2 class="your-posts-text">Your Posts</h2>
  <ul class ="post-ul-list">
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href='/dashboard/edit/{{post.id}}'>Edit post</a>
    </li>
    {{/each}}
  </ul>
</section>
{{/if}}

<script src="/public/js/add-posts.js"></script>